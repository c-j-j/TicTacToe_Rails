<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<% if @computer_has_next_turn %>
  <meta http-equiv="refresh" content="0;URL='<%= @next_turn_url %>'" />
<% end %>
<title>TicTacToe</title>
</head>
<body>
<section>
      <h1><strong>Status:</strong> <%= @game_presenter.status %></h1>
      <% @game_presenter.board_as_array.each_with_index do |mark, index| %>
        <div class="cell" id="<%="cell-#{index}"%>"
          style="width: <%= @game_presenter.cell_size %>; padding-bottom: <%= @game_presenter.cell_size %>;">
          <a href="<%= @next_turn_url %>&position=<%= index %>">
            <%= mark %>
          </a>
        </div>
      <% end %>

      <% unless @error_message.nil? %>
        <p class="error"><%= @error_message %></p>
      <% end %>

      <h3><a id="new_game_link" href="/">Click Here to set up a new game</a></h3>
</section>

</body>
</html>
